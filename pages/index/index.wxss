/* pages/index/index.wxss */
@import '../order/order.wxss';

.search-scan {
  position: relative;
  padding: 20rpx;
  background: #272d4d;
}

.search-info {
  padding: 0 80rpx 0 20rpx;
  position: relative;
  z-index: 2;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 10rpx;
}

.search-scan input {
  font-size: 30rpx;
  line-height: 80rpx;
  height: 80rpx;
}

.search-bg {
  position: absolute;
  left: 0;
  width: 100%;
  top: 0;
  opacity: 0.3;
  z-index: 1;
}

.search-icon {
  position: absolute;
  width: 40rpx;
  height: 40rpx;
  top: 40rpx;
  right: 40rpx;
  z-index: 3;
}

.topage {
  display: flex;
  align-items: center;
  background: #272d4d;
  color: #fff;
  font-size: 30rpx;
  height: 180rpx
}

.topage .navigator {
  width: 25%;
  text-align: center;
  padding: 20rpx 0 40rpx;
}

.topage image {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 10rpx;
}

.order-none {
  text-align: center;
  font-size: 30rpx;
  color: #999;
}

.order-none image {
  width: 25%;
  margin: 30% 0 0;
}

.order-none button {
  width: 240rpx;
  text-align: center;
  line-height: 70rpx;
  font-size: 30rpx;
  border: 1px solid #a1a6c3;
  color: #404d91;
  margin-top: 40rpx;
}
/**下单功能补充公共部分**/

.red {
  color: #e51c24 !important;
}

.orange {
  color: #fd914c !important;
}

.pop-shadow {
  position: fixed;
  top: 0;
  width: 100%;
  left: 0;
  height: 100%;
  z-index: 886;
  background: rgba(0, 0, 0, 0.7);
}

.pop-up {
  position: fixed;
  z-index: 888;
  background: #fff;
}

.pop-head {
  font-size: 30rpx;
  padding: 20rpx;
  background: #ebebeb;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.pop-head .save {
  color: #faaf18;
}

.pop-cancel {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 42rpx;
}

.pop-bottom {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 30rpx;
  color: #fff;
  background: #fd914c;
}

.search {
  border-radius: 10rpx;
  margin: 20rpx;
  background: #fff;
  padding: 10rpx 80rpx 10rpx 50rpx;
  font-size: 30rpx;
  position: relative;
}

.search icon {
  position: absolute;
  top: 0;
  padding: 15rpx 20rpx;
  right: 0;
  font-size: 40rpx;
}

.search input {
  line-height: 60rpx;
  height: 60rpx;
}

.button-tip {
  font-size: 28rpx;
  text-align: center;
  color: #fd914c;
  margin-top: 40rpx;
}

.fixed-bottom {
  position: fixed;
  line-height: 80rpx;
  text-align: center;
  width: 100%;
  bottom: 0;
  font-size: 30rpx;
  background: #fd914c;
  color: #fff;
}

.button-bottom {
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background: #fd914c;
  color: #fff;
  margin: 40rpx 20rpx;
  border-radius: 10rpx;
}

.button-bottom-half {
  display: flex;
  margin: 40rpx 10rpx;
}

.button-bottom-half button {
  line-height: 80rpx;
  height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  background: #ff5102;
  color: #fff;
  margin: 0 10rpx;
  width: calc(50% - 20rpx);
  border-radius: 10rpx;
}

.button-bottom-half navigator {
  margin: 0 10rpx;
  width: calc(50% - 20rpx);
}

.button-bottom-half navigator button {
  width: 100%;
  margin: 0;
}

.popup-code {
  position: fixed;
  width: 520rpx;
  height: 600rpx;
  left: 50%;
  top: 50%;
  margin: -300rpx 0 0 -260rpx;
  font-size: 30rpx;
  text-align: center;
  z-index: 999;
  background: #fff;
}

.popup-code-head {
  color: #fd7c29;
  font-size: 36rpx;
  margin: 40rpx 0 30rpx;
}

.popup-code-pic {
  width: 320rpx;
  height: 320rpx;
  margin-top: 30rpx;
}

 
.pop-pickup {
  background: #fff;
  width: 80%;
  height: 714rpx;
  left: 10%;
  top: 50%;
  margin-top: -357rpx;
  border-radius: 10rpx;
  overflow-x: hidden;
}

.pop-head-left {
  font-size: 34rpx;
  padding: 30rpx 30rpx 10rpx;
  line-height: 60rpx;
}

.pop-pickup-content {
  font-size: 30rpx;
  padding: 0 30rpx;
}

.pop-pickup-item {
  border-bottom: 2rpx solid #e7e7e7;
  line-height: 40rpx;
  padding: 20rpx 0;
  display: flex;
}

.pop-pickup-label {
  width: 130rpx;
}

.pop-pickup-name {
  width: calc(100% - 130rpx);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.pop-pickup-item textarea {
  width: calc(100% - 130rpx);
  height: 80rpx;
  line-height: 40rpx;
}

.pop-bottom-half {
  border-top: 2rpx solid #e7e7e7e7;
  height: 80rpx;
  line-height: 80rpx;
  text-align: center;
  font-size: 30rpx;
  color: #000;
  background: none;
  margin-right: -2rpx;
}

.pop-bottom-half .pop-bottom-opt {
  float: left;
  width: calc(50% - 4rpx);
  border-right: 2rpx solid #e7e7e7;
}
