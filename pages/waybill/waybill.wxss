/* pages/waybill/waybill.wxss */

.waybill-block {
  background: #fff;
  border-radius: 10rpx;
  margin: 20rpx;
  padding: 0 20rpx;
  overflow: hidden;
  position: relative;
}

.waybill-title {
  padding: 20rpx 10rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.waybill-status {
  font-size: 36rpx;
  font-weight: bold;
}

.waybill-time {
  font-size: 24rpx;
  color: #999;
}

.waybill-head {
  margin: 30rpx 0 20rpx;
  font-size: 30rpx;
  border-left: 4rpx solid #272d4d;
  padding-left: 20rpx;
}

.waybill-introduce {
  padding: 0 20rpx 20rpx;
}

.waybill-introduce-item {
  display: flex;
  align-items: flex-start;
  font-size: 30rpx;
  line-height: 40rpx;
  padding: 10rpx 0;
}

.waybill-introduce-label {
  width: 180rpx;
}

.waybill-introduce-info {
  width: calc(100% - 180rpx);
}

.waybill-introduce-info> text {
  margin-right: 20rpx;
}

.waybill-introduce-route {
  display: flex;
  align-items: center;
}

.waybill-introduce-route image {
  width: 80rpx;
  margin: 0 10rpx;
}

.trail-list {
  padding: 30rpx 0 50rpx 150rpx;
}

.trail-item {
  position: relative;
  border-left: 2rpx solid #e7e7e7;
  margin-left: 24rpx;
  padding: 0 0 20rpx 56rpx;
}

.trail-item .trail-item-circle {
  display: block;
  position: absolute;
  width: 42rpx;
  height: 42rpx;
  border-radius: 50%;
  left: -24rpx;
  top: -5rpx;
  background: #fff;
  border: 4rpx solid #b5b5b5;
  color: #999;
  text-align: center;
}

.trail-item-circle .iconfont {
  font-size: 34rpx;
  line-height: 42rpx;
}

.trail-item:first-child .trail-item-circle {
  background: #f05b48;
  border: 4rpx solid #f9afa6;
  color: #fff;
}

.trail-item-txt {
  font-size: 28rpx;
  color: #666;
}

.trail-item-status {
  font-size: 32rpx;
  line-height: 40rpx;
}

.trail-item:first-child .trail-item-status,
.trail-item:first-child .trail-item-detail:first-child {
  color: #e50219;
}

.trail-item-detail {
  margin: 10rpx 0 30rpx;
  position: relative;
  min-height: 60rpx;
}

.trail-item-point {
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  position: absolute;
  background: #b5b5b5;
  top: 15rpx;
  left: -64rpx;
}

.trail-item-detail:first-child .trail-item-point {
  display: none;
}

.trail-item-time {
  font-size: 24rpx;
  position: absolute;
  top: 0;
  left: -230rpx;
  text-align: right;
}

.trail-item-detail:first-child .trail-item-time {
  top: -50rpx;
}

.trail-opt {
  position: absolute;
  top: 18rpx;
  right: 20rpx;
}

.trail-opt  view {
  display: inline-block;
  margin-left: 20rpx;
  font-size: 24rpx;
  line-height: 50rpx;
  width: 120rpx;
  text-align: center;
  border: 1px solid #e7e7e7;
}
