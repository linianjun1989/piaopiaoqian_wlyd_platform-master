/* pages/forwarder/forwarder.wxss */

.forwarder-content {
  height: calc(100vh - 120rpx);
}

.forwarder-list {
  padding: 0 20rpx;
  overflow: hidden
}

.forwarder-item {
  margin-bottom: 20rpx;
  background: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  line-height: 48rpx;
  padding: 20rpx
}

.forwarder-item-head {
  position: relative;
  padding:10rpx 0 0rpx 140rpx;
  font-size: 34rpx;
  height: 126rpx;
}

.forwarder-item-logo {
  position: absolute;
  top: 0;
  left: 0;
  width: 120rpx;
  height: 120rpx;
  border: 1px solid #e7e7e7;
}

.forwarder-item-spec {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 40rpx;
  font-size: 28rpx;
  margin-top: 20rpx;
}

.forwarder-item-bar {
  display: flex;
  align-items: flex-start;
  font-size: 28rpx;
  margin-top: 10rpx;
  line-height: 40rpx
}

.forwarder-item-bar image {
  width: 36rpx;
  height: 36rpx;
  margin: 2rpx 20rpx 0 0;
}