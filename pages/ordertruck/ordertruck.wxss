/* pages/ordertruck/ordertruck.wxss */

.location-map {
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.location-map image {
  width: 100%;
}

/*服务条款弹窗*/

.pop-rule {
  top: 7%;
  left: 7%;
  width: 86%;
  height: 86%;
  border-radius: 10rpx 10rpx;
  overflow: hidden;
}

.pop-rule .pop-title {
  margin-top: 20rpx;
  line-height: 100rpx;
  text-align: center;
  font-size: 34rpx;
  border-bottom: 1px dashed #e7e7e7;
}

.pop-rule-content {
  height: calc(100% - 250rpx);
  width: calc(100% - 40rpx);
  margin: 20rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}

.textIndent {
  text-indent: 2em;
}

