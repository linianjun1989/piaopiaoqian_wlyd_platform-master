/**app.wxss**/
@import 'icon.wxss';
.bg-red {
  background: #e51c24 !important;
}

.bg-orange {
  background: #faaf18 !important;
}

.bg-blue {
  background: #2e8eff !important;
}

.red {
  color: #e51c24 !important;
}

.orange {
  color: #fd914c !important;
}

.gray {
  color: #999 ！important;
}


.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
}

page {
  background: #f5f5f5;
}

input {
  min-height: 0;
  height: auto;
}

button {
  padding: 0;
  border-radius: 0;
  background: none;
}

button::after {
  border: none;
}

.search {
  border-radius: 10rpx;
  margin: 20rpx;
  background: #fff;
  padding: 10rpx 80rpx 10rpx 50rpx;
  font-size: 30rpx;
  position: relative;
}

.search icon {
  position: absolute;
  top: 0;
  padding: 15rpx 20rpx;
  right: 0;
  font-size: 40rpx;
}

.search input {
  line-height: 60rpx;
  height: 60rpx;
}

.button-bottom {
  margin: 40rpx 20rpx;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  border-radius: 10rpx;
  background: #faaf18;
  color: #fff;
}


.fixed-bottom {
  position: fixed;
  bottom:0;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 34rpx;
  background: #faaf18;
  color: #fff;
}

/*规格弹窗*/

.pop-shadow {
  position: fixed;
  top: 0;
  width: 100%;
  left: 0;
  height: 100%;
  z-index: 886;
  background: rgba(0, 0, 0, 0.7);
}

.pop-up {
  position: fixed;
  z-index: 888;
  background: #fff;
}

.pop-head {
  font-size: 30rpx;
  padding: 20rpx;
  background: #ebebeb;
  line-height: 60rpx;
  display: flex;
  justify-content: space-between;
}

.pop-head .save {
  color: #faaf18;
}

.pop-cancel {
  position: absolute;
  right: 20rpx;
  top: 20rpx;
  font-size: 42rpx;
}

.pop-bottom {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  font-size: 32rpx;
  color: #fff;
  background: #faaf18;
}

.pop-head-left {
  font-size: 34rpx;
  padding: 30rpx;
  line-height: 60rpx;
}

.pop-opt-color {
  color: #3cc51f;
}

.pop-opt-right {
  font-size: 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 30rpx;
  line-height: 40rpx;
}

.pop-opt-right view {
  margin-left: 20rpx;
}
